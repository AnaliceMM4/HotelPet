<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/detailNome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:elevation="10dp"
            android:background="@drawable/fundo_arredondado"
            android:textStyle="bold"
            app:layout_constraintHorizontal_bias="0.0"
            android:padding="8dp"
            android:paddingStart="16dp"
            android:paddingEnd="150dp"
            android:textSize="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:hint="Nome tutor"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/detailCpf"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/detailNome"
            android:hint="CPF"
            />

        <TextView
            android:id="@+id/detailTelefone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_margin="16dp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/detailCpf"
            android:hint="Telefone"
            />

        <TextView
            android:id="@+id/detailEndereco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_margin="16dp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/detailTelefone"
            android:hint="Endereco"
            />
        <TextView
            android:id="@+id/detailAnimal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_margin="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/detailEndereco"
            android:hint="Nome pet"
            />
            <Button
                android:id="@+id/btCheckIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12sp"
                android:backgroundTint="#4A637A"
                android:fontFamily="@font/inconsolata"
                android:hint="CheckIn"
                android:onClick="ibCheckInOnclick"
                tools:ignore="MissingConstraints,SpeakableTextPresentCheck"
                android:textColorHint="#FFFFFF"
                android:textSize="20sp"
                app:cornerRadius="5sp"
                app:layout_constraintTop_toBottomOf="@id/detailAnimal"/>
            <Button
                android:id="@+id/btCheckOut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12sp"
                android:backgroundTint="#FFFFFF"
                android:fontFamily="@font/inconsolata"
                android:hint="CheckOut"
                android:onClick="ibCheckOutOnclick"
                tools:ignore="MissingConstraints,SpeakableTextPresentCheck"
                android:textColorHint="#4A637A"
                android:textSize="20sp"
                app:cornerRadius="5sp"
                app:layout_constraintTop_toBottomOf="@id/btCheckIn"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>