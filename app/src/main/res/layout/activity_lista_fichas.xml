<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    android:elevation="8dp"
    android:theme="@style/Theme.MaterialComponents.Light"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/localAnimal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:ellipsize="end"
            android:hint="Local onde se encontra o animal:"
            android:maxLines="1"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/imageView"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/alimentacaoAnimal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Do que está se alimentando:"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@id/localAnimal"
            app:layout_constraintStart_toStartOf="@id/localAnimal"
            app:layout_constraintTop_toBottomOf="@id/localAnimal" />

        <TextView
            android:id="@+id/comportamento"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Comportamento:"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@id/localAnimal"
            app:layout_constraintStart_toStartOf="@id/localAnimal"
            app:layout_constraintTop_toBottomOf="@id/alimentacaoAnimal" />

        <TextView
            android:id="@+id/atividadeRealizadasAnimal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Atividades que tem realizado:"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@id/localAnimal"
            app:layout_constraintStart_toStartOf="@id/localAnimal"
            app:layout_constraintTop_toBottomOf="@id/comportamento" />

        <TextView
            android:id="@+id/saudeAnimal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Saúde do Animal:"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@id/localAnimal"
            app:layout_constraintStart_toStartOf="@id/localAnimal"
            app:layout_constraintTop_toBottomOf="@id/atividadeRealizadasAnimal" />

        <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.015"
            android:id="@+id/guideline"/>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/guideline"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@color/blue" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>