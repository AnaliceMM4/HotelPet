<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CadServico"
    android:background="#475D6E"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linLogo"
        android:layout_width="wrap_content"
        android:layout_height="170dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:padding="10dp">

        <ImageButton
            android:id="@+id/imLogo"
            android:layout_width="120dp"
            android:layout_height="160dp"
            android:layout_gravity="center"
            android:background="@drawable/logohospet"
            android:onClick="ibLogoOnClick"
            tools:ignore="SpeakableTextPresentCheck" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linMenu1"
        android:layout_width="301dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="0dp"
        android:orientation="vertical"
        android:padding="10dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFFFFF"
            android:fontFamily="@font/im_fell_english"
            android:hint="Cadastro de Serviços"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textSize="28sp"
            android:layout_marginBottom="20sp"/>

        <TextView
            android:id="@+id/tvImagem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFFFFF"
            android:fontFamily="@font/inknut_antiqua"
            android:hint="Imagem"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginBottom="15sp"
            android:padding="3sp"
            android:textColorHint="#000000"
            android:textAlignment="center"
            android:textSize="100sp"
            android:background="@drawable/imagemmais"
            />

        <TextView
            android:id="@+id/tvNomeServico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFFFFF"
            android:fontFamily="@font/inknut_antiqua"
            android:hint="Nome do serviço"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/etNomeServico"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:fontFamily="@font/inknut_antiqua"
            android:textSize="14sp"
            android:padding="3sp"
            android:textColor="#686464"
            android:layout_marginBottom="15sp"
            android:hint="PlayGround"
            />

        <TextView
            android:id="@+id/tvValorServio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFFFFF"
            android:hint="Valor"
            android:fontFamily="@font/inknut_antiqua"
            android:textColorHint="#FFFFFF"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/etValorServico"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/inknut_antiqua"
            android:textSize="14sp"
            android:padding="3sp"
            android:textColor="#686464"
            android:layout_marginBottom="15sp"
            android:background="#FFFFFF"
            android:hint="R$  100,00"
            />

        <Button
            android:id="@+id/btCadastrarServico"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="#284A6A"
            android:layout_marginTop="12sp"
            android:fontFamily="@font/inconsolata"
            android:textSize="20sp"
            android:hint="CADASTRAR"
            android:textColorHint="#FFFFFF"
            app:cornerRadius="5sp"/>

    </LinearLayout>

</LinearLayout>